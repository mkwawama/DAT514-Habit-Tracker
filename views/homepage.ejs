  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
      document.addEventListener('DOMContentLoaded', function() {
    const box= document.querySelector(".modal")
    M.Modal.init(box,{});
  });
  </script>

</body>
</html>